<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/numQuiz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:hint="Quiz number"
                android:textSize="15sp"
                android:textColor="@color/black"
                />

            <ImageView
                android:id="@+id/delQuiz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:src="@drawable/baseline_delete_24" />
        </LinearLayout>

        <TextView
            android:id="@+id/showQuizQuestion"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/custom_edittext_v2"
            android:hint="Your quiz question"
            android:gravity="center"
            android:textSize="17sp"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/showAnswerA"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/custom_edittext_red"
            android:hint="Enter your answer here..."
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textSize="17sp"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/showAnswerB"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/custom_edittext_red"
            android:hint="Enter your answer here..."
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textSize="17sp"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/showAnswerC"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/custom_edittext_red"
            android:hint="Enter your answer here..."
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textSize="17sp"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/showAnswerD"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/custom_edittext_red"
            android:hint="Enter your answer here..."
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textSize="17sp"
            android:textColor="@color/black"
            />
        </LinearLayout>
</androidx.cardview.widget.CardView>